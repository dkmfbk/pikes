<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

    <publishDate position="bottom" format="yyyy/MM/dd"/>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.1</version>
    </skin>

    <body>
        <head>
            <style>
                footer { padding-top: 5px!important; padding-bottom: 5px!important; margin-top: 30px!important }
                div.subfooter { padding-top: 20px!important; padding-bottom: 10px!important }
                p.copyright { display: none }
            </style>
        </head>

        <menu name="About">
            <item name="Home" href="index.html"/>
            <item name="Pikes in a nutshell" href="overview.html"/>
            <item name="Representation model" href="model.html"/>
            <item name="Extraction pipeline" href="pipeline.html"/>
            <item name="Team" href="team-list.html"/>
            <item name="Publications" href="publications.html"/>
        </menu>

        <menu name="Resources">
            <item name="Mappings to FrameBase" href="mappings.html"/>
            <item name="Evaluation w.r.t. FrameBase TBox" href="eval-framebase.html"/>
            <item name="Evaluation w.r.t. predicate models TBox" href="eval-pm.html"/>
            <item name="Evaluation w.r.t. Simple English Wikipedia" href="eval-sew.html"/>
        </menu>

        <menu name="Maven Reports" ref="reports" inherit="top"/>
        <menu ref="modules" inherit="top"/>
        <menu ref="parent" inherit="top"/>

        <menu name="Links">
            <item name="GitHub project" href="https://github.com/dkmfbk/pikes"/>
            <item name="Issue tracker" href="https://github.com/dkmfbk/pikes/issues"/>
            <!--<item name="Contact authors" href="mailto:rdfproATfbkDOTeu"/>-->
        </menu>
    </body>

    <custom>
        <reflowSkin>
            <theme>bootswatch-flatly</theme>

            <endContent>
                ${site.topbar}
            </endContent>

            <highlightJs>true</highlightJs>
            <highlightJsTheme>googlecode</highlightJsTheme>
            <imgLightbox>true</imgLightbox>
            <smoothScroll>false</smoothScroll>
            <bootstrapCss>true</bootstrapCss>
            <bootstrapIcons>true</bootstrapIcons>
            <html5Anchor>true</html5Anchor>
            <markPageHeader>true</markPageHeader>

            <!--<absoluteResourceURL>${site-root}</absoluteResourceURL>-->
            <!--<protocolRelativeURLs>true</protocolRelativeURLs>-->

            <skinAttribution>true</skinAttribution>
            <brand>
                <name>
                    <![CDATA[
                        <img src='http://pikes.fbk.eu/images/pikes.png' />
                        <span>PIKES</span>
                    ]]>
                </name>
                <href>${site-root}</href>
            </brand>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>none</toc>
            <!--
              <toc>top</toc>
              <tocTopMax>6</tocTopMax>
              <tocTopFlatten>false</tocTopFlatten>
            -->
            <topNav>About|Resources|Maven Reports|Modules|Parent Project|Links</topNav>

            <bottomNav maxSpan="8">
                <column>About</column>
                <!--<column>Tool</column>-->
                <!--<column>Libraries</column>-->
                <column>Links</column>
            </bottomNav>

            <breadcrumbs>false</breadcrumbs>
            <bottomDescription quote="false">
                <![CDATA[
                Pikes is a suite for knowledge extraction developed within:<br/><br/>
                <a href="http://dkm.fbk.eu/"><img src="http://pikes.fbk.eu/images/fbkdkm.png"/></a>&nbsp;&nbsp;
                <a href="http://www.newsreader-project.eu/"><img src="http://pikes.fbk.eu/images/newsreader.png"/></a><br/>

                <!-- Insert here Google Analytics -->
                ]]>
            </bottomDescription>
            <!--<shortTitle>generate</shortTitle>-->
            <titleTemplate>%1$s - %2$s</titleTemplate>
            <pages>
                <index>
                    <shortTitle>Home</shortTitle>
                    <markPageHeader>false</markPageHeader>
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                </index>
                <taglist>
                    <html5Anchor>false</html5Anchor>
                </taglist>
                <license>
                    <highlightJs>false</highlightJs>
                </license>
                <pipeline>
                    <highlightJs>false</highlightJs>
                </pipeline>
            </pages>
        </reflowSkin>
    </custom>
</project>
